{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",       
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react-jsx", // Required for .tsx files
    "allowJs": true
  },
  "include": ["./src"]
}
